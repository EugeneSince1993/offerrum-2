doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(
    href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap' 
